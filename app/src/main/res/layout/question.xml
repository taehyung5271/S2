<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddf7e3">


    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="28dp"
        android:src="@drawable/s2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/love"/>
    <ImageView
        android:id="@+id/close"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_marginLeft="356dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/love"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:text="이거는 말이여 알아서 바뀔것이여"
        android:textColor="#5d9c59"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/q_title"
        />
    <TextView
        android:id="@+id/q_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/q_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:text="이건 그냥 몇번째 질문인지만 써야겠당 ㅎ_ㅎ"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        android:text="루시안"
        android:id="@+id/man_name"
        android:textColor="#5d9c59"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="240dp"
        android:text="입력해"
        android:gravity="top"
        android:id="@+id/man_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:textSize="30dp"
        android:text="나미"
        android:id="@+id/woman_name"
        android:textColor="#5d9c59"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="440dp"
        android:text="상대방이 아직 입력을 하지 않았어요."
        android:gravity="top"
        android:enabled="false"
        android:id="@+id/woman_text"
        />




</androidx.constraintlayout.widget.ConstraintLayout>